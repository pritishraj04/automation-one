<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="LoginSuite">
    <listeners>
        <listener class-name="org.example.listeners.TestListener"/>
    </listeners>
    <test name="LoginTest">
        <classes>
            <class name="org.example.tests.LoginTestCase">
                <methods>
                    <exclude name="loginWithValidUsers"/>
                </methods>
            </class>
            <class name="org.example.tests.InventoryTestCase"/>
            <class name="org.example.tests.CartTestCase"/>
        </classes>
    </test>
</suite>