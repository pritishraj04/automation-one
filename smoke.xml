<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="smokeTests" parallel="classes" thread-count="3">
    <listeners>
        <listener class-name="org.example.listeners.TestListener"/>
    </listeners>
    <test name="smoke">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="org.example.tests.LoginTestCase"/>
            <class name="org.example.tests.InventoryTestCase"/>
            <class name="org.example.tests.CartTestCase"/>
            <class name="org.example.tests.CheckoutOneTestCase"/>
            <class name="org.example.tests.CheckoutTwoTestCase"/>
        </classes>
    </test>
</suite>